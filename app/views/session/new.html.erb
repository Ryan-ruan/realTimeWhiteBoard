<div class="ui four column centered grid" id ='log'>
  <div class="column">
    <%= form_tag(login_path, class: 'ui large form')  do  %>
       <div class="field">
         <div class="ui left icon input">
           <i class="user icon"></i>
           <%= email_field_tag :email, nil, placeholder: "E-mail address" %>
         </div>
       </div>

       <div class="field">
         <div class="ui left icon input">
           <i class="lock icon"></i>
           <%=  password_field_tag :password, nil, placeholder: "Password" %>
         </div>
       </div>

       <%= submit_tag "Login", class: 'ui fluid button olive' %>

    <% end %>

    <% if flash[:error].present? %>
      <div class="ui error message">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>

    <div class="ui message">
      New to us?
      <a href="/users/new">Sign Up</a>
    </div>



  </div>
</div>

</div>
